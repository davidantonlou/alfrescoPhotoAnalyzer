<?xml version="1.0" encoding="UTF-8"?>
<model name="pa:alfrescoPhotoAnalyzer" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <!-- Optional meta-data about the model -->
    <description>Alfresco Photo Analyzer Model</description>
    <author>mimacom</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco System Model Definitions -->
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
        <import uri="http://www.alfresco.org/model/datalist/1.0" prefix="dl" />
    </imports>

    <namespaces>
        <namespace uri="http://www.mimacom.com/alfresco/alfrescoPhotoAnalyzer/1.0" prefix="pa"/>
    </namespaces>

    <!-- ===============================================================================================================
        Constraints, Types, and Aspects go here...
        -->

    <constraints>
        <constraint name="pa:emotionConstraints" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>ANGER</value>
                    <value>CONTEMPT</value>
                    <value>DISGUST</value>
                    <value>FEAR</value>
                    <value>HAPPINESS</value>
                    <value>NEUTRAL</value>
                    <value>SADNESS</value>
                    <value>SURPRISE</value>
                </list>
            </parameter>
        </constraint>
        <constraint name="pa:genderConstraints" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>MALE</value>
                    <value>FEMALE</value>
                </list>
            </parameter>
        </constraint>
    </constraints>

    <types>
        <type name="pa:facePhoto">
            <title>Face Photo Document</title>
            <parent>cm:content</parent>
            <properties>
                <property name="pa:numFaces">
                    <title>Number of Faces</title>
                    <type>d:int</type>
                </property>
                <property name="pa:gender">
                    <title>Gender</title>
                    <type>d:text</type>
                    <multiple>true</multiple>
                    <constraints>
                        <constraint ref="pa:genderConstraints" />
                    </constraints>
                </property>
                <property name="pa:age">
                    <title>Age</title>
                    <type>d:int</type>
                    <multiple>true</multiple>
                </property>
                <property name="pa:coordinates">
                    <title>Face Coordinates</title>
                    <type>d:text</type>
                    <multiple>true</multiple>
                </property>
                <property name="pa:emotion">
                    <title>Face Emotions</title>
                    <type>d:text</type>
                    <multiple>true</multiple>
                    <constraints>
                        <constraint ref="pa:emotionConstraints" />
                    </constraints>
                </property>
                <property name="pa:accessories">
                    <title>Face Accessories</title>
                    <type>d:text</type>
                    <multiple>true</multiple>
                    <constraints>
                        <constraint ref="pa:emotionConstraints" />
                    </constraints>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>pa:accesoriesAspect</aspect>
            </mandatory-aspects>
        </type>
    </types>

    <aspects>
        <aspect name="pa:accesoriesAspect">
            <properties>
                <property name="pa:glasses">
                    <type>d:boolean</type>
                    <mandatory>false</mandatory>
                    <multiple>false</multiple>
                </property>
                <property name="pa:headWear">
                    <type>d:boolean</type>
                    <mandatory>false</mandatory>
                    <multiple>false</multiple>
                </property>
            </properties>
        </aspect>
    </aspects>
</model>